@model BookStore.Models.Publisher
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Create Publisher</h3>
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PublisherName">Publisher Name *</label>
                    <input type="text" class="form-control" asp-for="PublisherName" />
                    <span asp-validation-for="PublisherName" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Publishers/Index" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>

            </form>
        </div>
    </div>
</div>

