@model BookStore.Models.Author
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Edit Author</h3>
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="AuthorName">Author Name *</label>
                    <input type="text" class="form-control" asp-for="AuthorName" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Authors/Index" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>

            </form>
        </div>
    </div>
</div>

